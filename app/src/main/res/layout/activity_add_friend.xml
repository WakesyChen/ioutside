<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/friend_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/friend_back"
            android:layout_width="23.3dp"
            android:layout_height="23.3dp"
            android:src="@drawable/back"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加好友"
            android:textSize="19dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
        </RelativeLayout>

    <RelativeLayout
        android:id="@+id/friend_relativeLayout1"
        android:layout_below="@id/friend_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#f2f2f2">
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/friend_relativeLayout2"
        android:layout_below="@id/friend_relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="39dp"
       >
        <ImageView
            android:id="@+id/friend_imageView"
            android:layout_width="24dp"
            android:layout_height="22dp"
            android:src="@drawable/friend_list"
            android:layout_marginLeft="11dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="户外达人龙虎榜"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/friend_imageView"
            android:layout_toEndOf="@id/friend_imageView"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="11dp"
            android:layout_centerVertical="true"
            android:src="@drawable/in_yellow"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <ImageView
        android:layout_below="@id/friend_relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:src="@drawable/friend_line"/>

    <RelativeLayout
        android:id="@+id/friend_relativeLayout3"
        android:layout_below="@id/friend_relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:visibility="gone">
        <ImageView
            android:id="@+id/friend_imageView1"
            android:layout_width="24dp"
            android:layout_height="22dp"
            android:layout_marginLeft="19dp"
            android:layout_centerVertical="true"
            android:src="@drawable/friend_weibo" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邀请微博好友"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/friend_imageView1"
            android:layout_toEndOf="@id/friend_imageView1"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="19dp"
            android:layout_centerVertical="true"
            android:src="@drawable/in_yellow"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <ImageView
        android:layout_below="@id/friend_relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:src="@drawable/friend_line"/>

    <RelativeLayout
        android:id="@+id/friend_relativeLayout4"
        android:layout_below="@id/friend_relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="39dp">
        <ImageView
            android:id="@+id/friend_imageView2"
            android:layout_width="24dp"
            android:layout_height="22dp"
            android:layout_marginLeft="11dp"
            android:layout_centerVertical="true"
            android:src="@drawable/friend_qq" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邀请QQ好友"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/friend_imageView2"
            android:layout_toEndOf="@id/friend_imageView2"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="11dp"
            android:layout_centerVertical="true"
            android:src="@drawable/in_yellow"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <ImageView
        android:layout_below="@id/friend_relativeLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:src="@drawable/friend_line"/>

    <RelativeLayout
        android:id="@+id/friend_relativeLayout5"
        android:layout_below="@id/friend_relativeLayout4"
        android:layout_width="match_parent"
        android:layout_height="39dp">
        <ImageView
            android:id="@+id/friend_imageView3"
            android:layout_width="24dp"
            android:layout_height="22dp"
            android:layout_marginLeft="11dp"
            android:layout_centerVertical="true"
            android:src="@drawable/friend_weixin" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邀请微信好友"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/friend_imageView3"
            android:layout_toEndOf="@id/friend_imageView3"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="11dp"
            android:layout_centerVertical="true"
            android:src="@drawable/in_yellow"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <ImageView
        android:layout_below="@id/friend_relativeLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:src="@drawable/friend_line"/>

    <RelativeLayout
        android:id="@+id/friend_relativeLayout6"
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:layout_below="@id/friend_relativeLayout5"
        android:background="#f2f2f2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:text="官方推荐"
            android:layout_centerVertical="true"
            android:textColor="#fb9b20"/>
    </RelativeLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_below="@id/friend_relativeLayout6"
        android:id="@+id/swipeRefresh_add"
        android:layout_marginRight="11dp"
        android:layout_marginLeft="11dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
    </android.support.v4.widget.SwipeRefreshLayout>

</RelativeLayout>
