<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f2f2f2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#ffffff">
        <ImageView
            android:id="@+id/share_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="11dp"
            android:src="@drawable/back"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我要推荐"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
        <ImageView
            android:id="@+id/share_experience"
            android:layout_width="53dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="11dp"
            android:src="@drawable/send"/>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/share_ScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadeScrollbars="true"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="链接地址"
                android:textSize="13sp"
                android:textColor="#fb9b20"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"/>
            <EditText
                android:id="@+id/share_url"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:background="@drawable/share_url"
                android:hint="点击输入链接"
                android:textSize="12sp"
                android:textColor="#1b1b1b"
                android:paddingLeft="13dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="推荐理由"
                android:textColor="#fb9b20"
                android:textSize="13sp"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="21dp"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/share_reason"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:background="@drawable/share_reason"
                android:hint="输入推荐理由"
                android:gravity="start"
                android:textSize="12sp"
                android:paddingLeft="13dp"
                android:paddingTop="12dp"
                android:textColor="#1b1b1b"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="11dp">
                <TextView
                    android:id="@+id/share_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="推荐的文章通过审核后可能加入精选哦    查看 "
                    android:textSize="10sp"
                    android:layout_marginLeft="50dp"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/share_know"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/share_textView"
                    android:text="《推荐须知》"
                    android:textColor="#f9b920"
                    android:textSize="10sp"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="原创投稿请联系“爱户外”工作人员"
                android:textColor="#1b1b1b"
                android:textSize="10sp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="40dp"
                android:textColor="#1b1b1b"
                android:textSize="10sp"
                android:text="“爱户外”官方邮箱:pr@ioutside.com"/>

        </LinearLayout>
    </ScrollView>


</LinearLayout>
