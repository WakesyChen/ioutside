<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/photo_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/back"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择图片"
            android:textSize="19dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tv_to_confirm"
            android:layout_width="53dp"
            android:layout_height="24dp"
            android:background="@drawable/selector_blue_to_gray"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="11dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:text="完成"/>
    </RelativeLayout>

    <GridView
        android:layout_below="@id/relativeLayout"
        android:id="@+id/mp_galley_gridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="3"
        android:horizontalSpacing="1dp"
        android:verticalSpacing="1dp" />


    <View
        android:id="@+id/mp_galley_view"
        android:layout_below="@id/mp_galley_gridView"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#FFDFDFDF"/>

