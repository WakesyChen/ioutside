<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="11dp"
    android:layout_marginLeft="11dp">

    <RelativeLayout
        android:id="@+id/friend_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="46dp">
        <com.xiaoxiang.ioutside.common.CircleImageView
            android:id="@+id/friend_userPhoto"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/account_bitmap"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/friend_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/friend_userPhoto"
            android:layout_toEndOf="@id/friend_userPhoto" />

        <ImageView
            android:id="@+id/friend_focus"
            android:layout_width="41dp"
            android:layout_height="27dp"
            android:src="@drawable/add_focus"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/friend_relativeLayout"
    android:id="@+id/relativeLayout">
    <ImageView
        android:id="@+id/friend_photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="11dp"
        android:src="@drawable/account_bitmap"
        android:layout_marginTop="11dp"
        android:scaleType="centerCrop"/>
    <ImageView
        android:id="@+id/friend_photo1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="11dp"
        android:layout_marginTop="11dp"
        android:src="@drawable/account_bitmap"
        android:scaleType="centerCrop"
        android:layout_toRightOf="@id/friend_photo"/>

    <ImageView
        android:id="@+id/friend_photo2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/account_bitmap"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="11dp"
        android:layout_marginTop="11dp"
        android:scaleType="centerCrop"
        android:layout_toRightOf="@id/friend_photo1"/>
</RelativeLayout>


</RelativeLayout>