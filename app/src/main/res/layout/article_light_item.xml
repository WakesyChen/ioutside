<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f2f2f2"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/light_background"
            android:layout_width="match_parent"
            android:layout_height="310dp"
            android:scaleType="centerCrop"
            android:src="@drawable/account_bitmap"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"/>

        <ImageView
            android:id="@+id/light_play"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/play_button"
            android:layout_marginTop="150dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <RelativeLayout
                android:id="@+id/light_relativeLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:layout_below="@id/light_background">
                <TextView
                    android:id="@+id/light_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="标题"
                    android:textSize="15sp"
                    android:textColor="#1b1b1b"
                    android:layout_marginTop="11dp"
                    android:layout_marginBottom="13dp"/>

                <ImageView
                    android:id="@+id/light_share"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/share"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/subscribe_line"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:layout_below="@id/light_relativeLayout2"
                android:layout_alignParentStart="true" />

            <RelativeLayout
                android:id="@+id/light_relativeLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:layout_below="@id/light_relativeLayout2">
                <TextView
                    android:id="@+id/light_thoughts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="介绍"
                    android:textSize="12sp"
                    android:textColor="#8c8c8c"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/light_relativeLayout4"
                android:layout_below="@id/light_relativeLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="12dp">
                <TextView
                    android:id="@+id/light_page"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1/5"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"/>
<!--
                <ImageView
                    android:id="@+id/light_download"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/light_download"
                    android:layout_marginEnd="7dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"/>

                <TextView
                    android:id="@+id/light_download_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/light_download"/>
-->
                <ImageView
                    android:id="@+id/light_zan"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/zan_normal"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true" />

                <TextView
                    android:id="@+id/light_likedCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="2"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/light_zan" />

                <ImageView
                    android:id="@+id/light_comment"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/comment_yellow"
                    android:layout_marginEnd="20dp"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/light_likedCount" />

                <TextView
                    android:id="@+id/light_commentCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="1"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/light_comment" />

            </RelativeLayout>


        </RelativeLayout>


</RelativeLayout>




