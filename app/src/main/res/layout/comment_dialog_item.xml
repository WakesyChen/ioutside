<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/comment_dialog_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.xiaoxiang.ioutside.common.CircleImageView
            android:id="@+id/comment_dialog_userPhoto"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/account_bitmap"/>

        <TextView
            android:id="@+id/comment_dialog_userName"
            android:text="ioutside"
            android:textSize="12sp"
            android:textColor="#1b1b1b"
            android:layout_toRightOf="@id/comment_dialog_userPhoto"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/comment_dialog_publishtime"
            android:text="2016"
            android:textSize="10sp"
            android:textColor="#454545"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6.6dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="11dp"/>

        <TextView
            android:id="@+id/comment_dialog_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="回复了:"
            android:layout_toRightOf="@id/comment_dialog_userName"
            android:layout_marginLeft="13dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/comment_dialog_other_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ioutside"
            android:textSize="13sp"
            android:textColor="#454545"
            android:layout_toRightOf="@id/comment_dialog_textView"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/comment_dialog_content"
        android:layout_below="@id/comment_dialog_relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="53dp"
        android:layout_marginBottom="9dp"
        android:textColor="#454545"
        android:textSize="12sp"
        android:text="这篇文章"/>



</RelativeLayout>