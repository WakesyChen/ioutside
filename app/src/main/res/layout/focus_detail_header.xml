<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="@android:color/white"
        android:id="@+id/focus_header_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/focus_header_back"
            android:layout_width="23.3dp"
            android:layout_height="23.3dp"
            android:src="@drawable/back"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="动态详情"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/focus_header_function_share"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/share"
            android:layout_alignTop="@id/focus_header_back"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/focus_header_relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/focus_header_relativeLayout">
        <com.xiaoxiang.ioutside.common.CircleImageView
            android:id="@+id/focus_header_userPhoto"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/account_bitmap"/>

        <TextView
            android:id="@+id/focus_header_username"
            android:textSize="14sp"
            android:textColor="#1b1b1b"
            android:layout_toRightOf="@id/focus_header_userPhoto"
            android:layout_marginLeft="6.6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/focus_header_attention"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/focus_header_relativeLayout4"
        android:layout_below="@id/focus_header_relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v4.view.ViewPager
            android:id="@+id/focus_header_viewPager"
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp" />
        <ImageView
            android:id="@+id/focus_header_image"
            android:visibility="gone"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp" />
        <ImageView
            android:id="@+id/focus_header_play"
            android:visibility="gone"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/play_button"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/focus_header_thoughts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#4f4f4f"
        android:textSize="14sp"
        android:text="woshiyizhixiaxjodhdhwfhuwehfdoqhdsodjqowuwdidjwqiohfqf"
        android:lineSpacingExtra="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_below="@id/focus_header_relativeLayout4" />

    <RelativeLayout
        android:id="@+id/focus_header_relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/focus_header_thoughts"
        android:layout_marginBottom="11dp"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <TextView
            android:id="@+id/focus_header_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#b0b0b0"
            android:layout_gravity="right"
            android:layout_marginRight="6dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/focus_header_textView"
        android:layout_below="@id/focus_header_relativeLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="全部评论"
        android:layout_marginLeft="6dp"
        android:layout_centerVertical="true"/>
    <ImageView
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/focus_header_textView"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ccc"/>

</RelativeLayout>