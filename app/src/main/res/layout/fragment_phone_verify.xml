<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:paddingTop="12dp"
    tools:background="@drawable/bg_login_v2" >

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/input_text"
            android:text="验证码已发送至"/>

        <TextView
            android:id="@+id/tv_phone_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/colorAccent"
            />
    </LinearLayout>


    <LinearLayout

        android:background="@color/input_box_bg_color"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:layout_width="276dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:text="验证码"
                android:gravity="center"
                android:textColor="@color/input_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <EditText
                android:id="@+id/et_codes"
                android:textSize="13sp"
                android:layout_marginLeft="10dp"
                android:hint="请输入验证码"
                android:singleLine="true"
                android:textColor="@color/input_text"
                android:gravity="center"
                android:background="@null"
                android:textColorHint="@color/input_text_hint"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color"/>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:text="新密码"
                android:gravity="center"
                android:textColor="@color/input_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:inputType="textPassword"
                android:textColor="@color/input_text"
                android:hint="请输入新密码"
                android:background="@null"
                android:textColorHint="@color/input_text_hint"
                android:textSize="13sp"
                android:gravity="center"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color"/>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:text="再次输入"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/input_text"/>

            <EditText
                android:id="@+id/et_pwd_confirm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:inputType="textPassword"
                android:layout_marginLeft="10dp"
                android:textSize="13sp"
                android:textColor="@color/input_text"
                android:hint="再次输入新密码"
                android:background="@null"
                android:textColorHint="@color/input_text_hint" />


        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_next_step"
        android:layout_marginTop="21dp"
        android:textSize="15sp"
        android:text="下一步"
        android:enabled="false"
        android:textColor="@color/input_text"
        android:background="@drawable/bg_btn_states_v2"
        android:layout_width="276dp"
        android:layout_height="44dp" />

</LinearLayout>