<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#eeeeee"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.xiaoxiang.ioutside.mine.widget.BannerLayout
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="173dp"/>
        <TextView
            android:textColor="#ffffff"
            android:background="#66000000"
            tools:text="fadfafsdfafadffsdf"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:id="@+id/tv_title"
            android:maxLines="1"
            android:padding="5dp"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </FrameLayout>

    <com.xiaoxiang.ioutside.mine.widget.IndicatorLayout
        android:layout_gravity="center"
        app:indicatorShape="oval"
        app:selectedIndicatorColor="@color/colorAccent"
        app:selectedIndicatorWidth="5dp"
        app:selectedIndicatorHeight="5dp"
        app:indicatorSpace="2dp"
        app:unSelectedIndicatorHeight="5dp"
        app:unSelectedIndicatorWidth="5dp"
        android:id="@+id/indicator_layout"
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="100dp">
        <FrameLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ImageView
                android:background="@drawable/bg_activity_editor_choice"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitXY"
                android:id="@+id/iv_activities"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:text="精选活动"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>

        <FrameLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/bg_activity_certificate"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitXY"
                android:id="@+id/iv_certificate"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:text="培训考证"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </FrameLayout>

    </LinearLayout>

</LinearLayout>