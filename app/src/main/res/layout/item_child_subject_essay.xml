<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_child_subject_essay_root_view"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="#ffffff"
    android:paddingBottom="10dp"
    android:paddingLeft="8dp"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_title_essay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/iv_photo"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/tv_title_essay"
        android:textSize="13sp"
        tools:text="石头也有生命居住，即使在荒无人烟的地方，你也不是一个人" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_photo"
        android:layout_gravity="right"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@+id/iv_photo"
        tools:text="6小时前" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_alignBottom="@id/iv_photo"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp">

        <TextView
            android:id="@+id/tv_comment_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:text="5"
            android:textColor="@color/tv_hadObserved"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv_comment"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_comment" />

        <TextView
            android:id="@+id/tv_like_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="bottom"
            android:textColor="@color/tv_hadObserved"
            android:textSize="12sp"
            tools:text="5" />


        <ImageView
            android:id="@+id/iv_like"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_like_unclicked" />


    </LinearLayout>

</RelativeLayout>