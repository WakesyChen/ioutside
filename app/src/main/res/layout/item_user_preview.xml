<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/background_white"
    android:id="@+id/item_user_preview"
    android:layout_width="match_parent"
    android:layout_height="75dp">
    
    <com.xiaoxiang.ioutside.common.CircleImageView
        android:layout_centerVertical="true"
        android:id="@+id/civ_avatar"
        android:layout_marginLeft="11dp"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    
    <TextView
        android:textSize="12sp"
        android:id="@id/tv_name"
        tools:text="爸爸是爱你的"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@id/civ_avatar"
        android:layout_toRightOf="@id/civ_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <ImageView
        android:id="@+id/iv_gender"
        tools:src="@drawable/src_ic_male"
        android:layout_toRightOf="@+id/civ_avatar"
        android:layout_alignBottom="@+id/civ_avatar"
        android:layout_marginLeft="10dp"
        android:layout_width="12dp"
        android:layout_height="12dp" />

    <TextView
        android:id="@+id/tv_level"
        tools:text="LV3"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/iv_gender"
        android:layout_alignBottom="@id/civ_avatar"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_alignParentBottom="true"
        android:src="#eeeeee"
        android:layout_width="match_parent"
        android:layout_height="1dp" />


</RelativeLayout>